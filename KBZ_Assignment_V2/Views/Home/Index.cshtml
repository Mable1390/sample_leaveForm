@section scripts{
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>Leave Form</h1>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Leaves</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: leaves">
                    <li>
                        <strong><span data-bind="text: EmployeeName"></span></strong>
                        <span data-bind="text: Date"></span>
                        <small><a href="#" data-bind="click: $parent.getLeaveDetail">Details</a></small>                               
                    </li>
                </ul>
            </div>
            <div class="alert alert-danger" data-bind="visible: error">
                <p data-bind="text: error"></p>
            </div>
        </div>
    </div>
    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detail</h2>
            </div>
            <table class="table">
                <tr>
                    <td>Employee Name</td>
                    <td data-bind="text: detail().EmployeeName"></td>
                </tr>

                <tr>
                    <td>Date</td>
                    <td data-bind="text: detail().Date"></td>
                </tr>

                <tr>
                    <td>Title</td>
                    <td data-bind="text: detail().Title"></td>
                </tr>

                <tr>
                    <td>Reason</td>
                    <td data-bind="text: detail().Reason"></td>
                </tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <!-- TODO: Add new book -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Leave</h2>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addLeave">

                    <div class="form-group">
                        <label for="inputEmployee" class="col-sm-2 control-label">Employee</label>
                        <div class="col-sm-10">
                            <select data-bind="options:employees, optionsText: 'Name', value:newLeave.Employee"></select>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: newLeave">
                        <label for="inputTitle" class="col-sm-2 control-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Title" />
                        </div>
                        <label for="inputDate" class="col-sm-2 control-label">Date</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="inputDate" data-bind="value:Date" />
                        </div>
                        <label for="inputReason" class="col-sm-2 control-label">Reason</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputReason" data-bind="value:Reason" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>